<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@drawable/_644832420_14_krot_info_p_foni_dlya_saitov_14"
    android:backgroundTint="@color/black"
    android:backgroundTintMode="add"
    android:onClick="goToPortfolio"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="-121dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/changa_one"
                android:text="@string/app_nameStudio"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:textColorLink="#FF5722"
                android:textSize="60sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                app:srcCompat="@drawable/minrec" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Добро пожаловать!"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textColorHighlight="#FF5722"
                android:textColorHint="#FF5722"
                android:textColorLink="#FF5722"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:backgroundTint="@color/design_default_color_error"
                android:onClick="goToUs"
                android:text="О нас"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textSize="34sp"
                app:icon="@color/design_default_color_error"
                app:iconTint="#FF5722" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:backgroundTint="@color/design_default_color_error"
                android:onClick="goToPhoto"
                android:text="Фото"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textSize="34sp"
                app:icon="@color/design_default_color_error"
                app:iconTint="#FF5722" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:backgroundTint="@color/design_default_color_error"
                android:onClick="goToPortfolio"
                android:text="Портфолио"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textSize="34sp"
                app:icon="@color/design_default_color_error"
                app:iconTint="#FF5722" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:backgroundTint="@color/design_default_color_error"
                android:onClick="goToApparatura"
                android:text="Аппаратура"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textSize="34sp"
                app:icon="@color/design_default_color_error"
                app:iconTint="#FF5722" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:backgroundTint="@color/design_default_color_error"
                android:onClick="goToBuild"
                android:text="Как строилась студия"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textColorLink="@color/black"
                android:textSize="34sp"
                app:icon="@color/design_default_color_error"
                app:iconTint="#FF5722" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>